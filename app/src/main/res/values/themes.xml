<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidMaterialDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textFillColor">@color/green</item>
    </style>

    <style name="MyProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorOnSecondary">@color/green</item>
        <item name="colorOnSurface">@color/red</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/aladin</item>
    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PinkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#ef9a9a</item>
        <item name="colorPrimaryVariant">#ffcccb</item>
        <item name="colorOnPrimary">#ba6b6c</item>
        <item name="colorSecondary">#ffcdd2</item>
        <item name="colorSecondaryVariant">#ffffff</item>
        <item name="colorOnSecondary">#cb9ca1</item>
    </style>

    <style name="GreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#1b5e20</item>
        <item name="colorPrimaryVariant">#4c8c4a</item>
        <item name="colorOnPrimary">#003300</item>
        <item name="colorSecondary">#388e3c</item>
        <item name="colorSecondaryVariant">#6abf69</item>
        <item name="colorOnSecondary">#00600f</item>
    </style>

    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/aladin</item>
    </style>
</resources>